<h1>Eat-Da-Burger!</h1>

<!-- added the devour button -->
<ul>
  {{#each burgers}}
    {{#unless this.sleepy}}
    <li>
        {{this.name}}  }

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="id" value="true">
          <button type="submit">DEVOUR IT!</button>
        </form>
    </li>
    {{/unless}}
  {{/each}}
</ul>


<form method="POST" action="/api/burgers">
    <textarea type="text" name="burger"></textarea>
</form>

  <button type="submit">Submit</button>

  <h4>Enter a burger you want to eat Click the "Submit" button.</h4>
</form>
