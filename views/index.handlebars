<div class="container">

        <div class="row">

            <div class="col-md-12">
                <img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
            </div>
        </div>

        <div class="row">

                <div class="col-md-12">
                    <h1 class="text-center text-danger">Eat-Da-Burger</h1>
                </div>
        </div>  

        <div class="col-md-5"> 
                    <!-- added the devour button -->
              <ul>
                  {{#each burgers}}
                        {{#unless this.devoured}}
                        <li>
                            {{this.id}}. {{this.burger_name}}  

                              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="burger_id" value="true">
                                <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                              </form>
                        </li>
                        {{/unless}}
                  {{/each}}
              </ul>
        </div>

        <div class="col-md-2"></div>

        <div class="col-md-5">
              <h3 class="text-muted">Eaten Burgers</h3>
              <ul>
                    {{#each burgers}}
                        {{#if this.devoured}}
                            <li>
                                  <h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
                            </li>
                        {{/if}}
                    {{/each}}
              </ul>
        </div>
 

      <br><br>

    <div class="row">

          <div class="col-md-12 text-center">
              <form class="create-update-form" action="burgers/insertOne" method="POST">
                  <div class="form-group">
                        <textarea type="text" name="burger"></textarea>
                        <button class="btn btn-default" type="submit">Submit</button>
                        <h5>Enter a burger you want to eat Click the "Submit" button.</h5>
                  </div>
              </form>
          </div>
    </div>

</div>

 



 
 