<div class="container">

    <div class="row">

        <div class="col-md-12">

        </div>
    </div>

    <div class="row">
        <img src="/assets/img/burgerimage.png"  width="200px"; margin-left="32px" id="yummy-burger">
        <div class="col-md-12">
            <h1 class="text-center text-danger">Eat-Da-Burger</h1>
        </div>

    </div>

    <div class="col-md-5 devouredDiv">
        <!-- added the devour button -->
        <h3 class="text-muted"> Burgers Ready to Eat </h3>
        <ul>
            {{#each burgers}} 
                {{#unless this.devoured}}
            <li>
                {{this.burger_name}}

                    <input type="hidden" name="burger_id" value="true">
                    <button data-eaten="no" data-value="{{this.id}}" class="btn btn-default devourButton">DEVOUR IT!</button>
                
            </li>
                {{/unless}} 
            
            {{/each}}
        </ul>
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-5 devouredDiv">
        <h3 class="text-muted"><div class="eaten">Eaten Burgers</div></h3>
        <ul>
            {{#each burgers}} {{#if this.devoured}}
            <li>
                <h5 class="text-muted">{{this.burger_name}}</h5>
                <button data-eaten="yes" data-value="{{this.id}}" class="btn btn-default devourButton"><div class="cook">COOK IT!</div></button>
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>


    <br>
    <br>

    <div class="row">

        <div class="col-md-12 text-center">
            <form class="create-update-form" action="burgers/insertOne" method="POST">
                <div class="form-group">
                    <textarea type="text" name="burger"></textarea>
                    <button class="btn btn-default" type="submit"><div class="button">Submit</div></button>
                    <h5>Enter a burger you want to eat Click the "Submit" button.</h5>
                </div>
            </form>
        </div>
    </div>

</div>
 



 
 